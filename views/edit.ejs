<%- include("partials/header.ejs") -%>

<h4 class="my-3">Edit your Information to current and accurate details.</h4>


<!-- form comes here -->
     <form action="/edit/<%= data._id %>" method="post" autocomplete="off">

    <!-- first name and last name row -->
    <div class="row my-4">
        <div class="col">
            <label class="form-label">First Name:</label>
            <input type="text" name="firstname" value="<%= data.firstname %>" class="form-control" placeholder="First name" required>
        </div>
        <div class="col">
            <label class="form-label">Second Name:</label>
            <input type="text" name="secondname" value="<%= data.secondname %>" class="form-control"  placeholder="Second name" required>
        </div>
        <div class="col">
            <label class="form-label">Last Name:</label>
            <input type="text" name="lastname" value="<%= data.lastname %>" class="form-control" placeholder="Last name" required>
        </div>
    </div>
    <!-- row for Date of birth and Gender -->
    <div class="row my-4">
        <div class="col">
            <label class="form-label">Date Of Birth:</label>
             <% const date = new Date(data.birthdate); %>
            <input type="text" name="birthdate" value="<%= `${date.getDate()}/${date.getMonth() + 1}/${date.getFullYear()}` %>" class="form-control" disabled>
        </div>
        <div class="col">
            <label class="form-label">Gender:</label>
                 <select name="gender"  class="form-select" required>
                <option selected><%= data.gender %></option>
                <option value="Male">Male</option>
                <option value="Female">Female</option>
                </select>
        </div>
    </div>
    <!-- street address and city -->
    <div class="row my-4">
        <div class="col">
            <label class="form-label">Street Address:</label>
            <input type="text" name="address" value="<%= data.address %>" class="form-control"  required placeholder="Address of street">
        </div>
        <div class="col">
            <label class="form-label">City/Region:</label>
            <select name="city"  class="form-select" required>
                <option selected><%= data.city %></option>
                <option>Dodoma</option>
                <option>Dar-es-salaam</option>
                <option>Tanga</option>
                <option>Morogoro</option>
                <option>Mbeya</option>
                <option>Mwanza</option>
                <option>Arusha</option>
                <option>Kilimanjaro</option>
                <option>Pwani</option>
                <option>Singida</option>
                <option>Ruvuma</option>
                <option>Iringa</option>
            </select>
           
        </div>
    </div>

     <div class="row my-4">
        <div class="col"></div>
        <div class="col">
            <button class="btn btn-warning btn-sm" type="submit">Update</button>
        </div>
    </div>

    </form>