<%- include("partials/header.ejs") -%>

    <h4 class="my-2">Fill the form and submit it to help us generate your National Identification Number</h4>

    <!-- form comes here -->
     <form action="/add" method="post">

    <!-- first name and last name row -->
    <div class="row my-4">
        <div class="col">
            <label class="form-label">First Name:</label>
            <input type="text" name="firstname" class="form-control" autocomplete="off" placeholder="First name" required>
        </div>
        <div class="col">
            <label class="form-label">Second Name:</label>
            <input type="text" name="secondname" class="form-control" autocomplete="off" placeholder="Second name" required>
        </div>
        <div class="col">
            <label class="form-label">Last Name:</label>
            <input type="text" name="lastname" class="form-control" autocomplete="off" placeholder="Last name" required>
        </div>
    </div>
    <!-- row for Date of birth and Gender -->
    <div class="row my-4">
        <div class="col">
            <label class="form-label">Date Of Birth:</label>
            <input type="date" name="birthdate" class="form-control" autocomplete="off" required>
        </div>
        <div class="col">
            <label class="form-label">Gender:</label>
                 <select name="gender" class="form-select" required>
                <option selected>Choose...</option>
                <option value="Male">Male</option>
                <option value="Female">Female</option>
                </select>
        </div>
    </div>
    <!-- street address and city -->
    <div class="row my-4">
        <div class="col">
            <label class="form-label">Street Address:</label>
            <input type="text" name="address" class="form-control" autocomplete="off" required placeholder="Address of street">
        </div>
        <div class="col">
            <label class="form-label">City/Region:</label>
            <select name="city" class="form-select" required>
                <option selected>Choose...</option>
                <option>Dodoma</option>
                <option>Dar-es-salaam</option>
                <option>Tanga</option>
                <option>Morogoro</option>
                <option>Mbeya</option>
                <option>Mwanza</option>
                <option>Arusha</option>
                <option>Kilimanjaro</option>
                <option>Pwani</option>
                <option>Singida</option>
                <option>Ruvuma</option>
                <option>Iringa</option>
            </select>
           
        </div>
    </div>

     <div class="row my-4">
        <div class="col"></div>
        <div class="col">
            <button class="btn btn-primary btn-sm" type="submit">Submit</button>
        </div>
    </div>

    </form>